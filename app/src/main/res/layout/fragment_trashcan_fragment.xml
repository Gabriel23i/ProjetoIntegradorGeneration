<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trashcan_fragment"
    android:background="@drawable/gradient_list">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/geometric_background"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backtest2" />

    <View
        android:id="@+id/cont"
        style="@style/ContainerComponents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="61dp"
        android:layout_marginBottom="80dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:scrollbars="vertical" />

    <ScrollView
        android:layout_width="400dp"
        android:layout_height="600dp"
        app:layout_constraintBottom_toBottomOf="@+id/cont"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/cont"
        android:textAlignment="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/baloo"
                android:text="Guia rápido de funcionalidades das Tarefas"
                android:textAlignment="center"
                android:textColor="#403F3F"
                android:textSize="19sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cont"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/open_sans"
                android:text="Tarefas Diarias: Tarefas que quero como Hábito duradouro!"
                android:textColor="@color/Green_dark"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                android:padding="10dp"
                />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/open_sans"
                android:text="Esse botão tem a finalidade de criar tarefas rotineiras, que serão realizadas todos os dias!"
                android:textColor="#403F3F"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                android:padding="10dp"
                />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/open_sans"
                android:text="Tarefas Comuns: Tarefas rapidas do seu dia a dia!"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.488"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/open_sans"
                android:text="Esse botão tem a finalidade de criar tarefas rápidas e corriqueiras do dia a dia! "
                android:textColor="#403F3F"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.479"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/open_sans"
                android:text="Tarefas Meta: Se você procura um desafio, essa é a opção correta!"
                android:textColor="@color/YellowTest1"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.466"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/teste"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/open_sans"
                android:text="Esse botão tem a finalidade de criar uma Meta estabelecida para sua vida!"
                android:textColor="#403F3F"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.52"
                app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/Titulo2"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/baloo"
                android:text="Gestão de Tempo X Saúde Mental / Física"
                android:textAlignment="center"
                android:textColor="#403F3F"
                android:textSize="19sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cont" />

            <TextView
                android:id="@+id/texto2"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/open_sans"
                android:text="A má gestão de tempo influência em diversos âmbitos da nossa vida, neste tópico temos a personalidade alterada. "
                android:textColor="#403F3F"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.52"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/texto3"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/open_sans"
                android:text="Personalidade tipo A: Caracterizada pela impaciência, agressividade, competitividade, tensão e hostilidade; "
                android:textColor="@android:color/holo_red_dark"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.52"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                />

            <TextView
                android:id="@+id/texto4"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/open_sans"
                android:text="Personalidade tipo B: Conseguem trabalhar sem ficar ansiosas nem agitadas, são tolerantes com atrasos e relaxam sem culpa; "
                android:textColor="@color/Green_dark"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.52"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                />

            <TextView
                android:id="@+id/texto5"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/open_sans"
                android:text="O estado constante de estresse de tempo prejudica a saúde: enfraquece o sistema imunológico, causa dores musculares, insônia, dores de cabeça, pressão alta, doenças cardíacas e aumenta o risco de depressão e ansiedade. A gestão do tempo permite lidar com o problema da urgência do tempo e aqui também, a primeira providência é verificar como estamos lidando com ela"
                android:textColor="#403F3F"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.52"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/Titulo5"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/baloo"
                android:text="Para Mais Informações sobre Saúde Mental acesse: https://www.satedsp.org.br/2021/03/25/atendimento-psicologico-gratuito-ou-a-precos-populares-sao-paulo/"
                android:textAlignment="center"
                android:textColor="#403F3F"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cont" />


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>